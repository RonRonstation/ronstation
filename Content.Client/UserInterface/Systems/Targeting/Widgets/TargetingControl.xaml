<widgets:TargetingControl
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:widgets="clr-namespace:Content.Client.UserInterface.Systems.Targeting.Widgets"
    Name="TargetingButton"
    VerticalAlignment="Bottom"
    HorizontalAlignment="Right"
    >
    <Control>
        <GridContainer Rows="3" Columns="1">
            <Label Text="Head" HorizontalAlignment="Center"/>
            <GridContainer Rows="1" Columns="5" HorizontalExpand="True">
                <Label Text="Filler" HorizontalExpand="True"/>
                <Label Text="LeftArm"/>
                <Label Text="Body"/>
                <Label Text="RightArm"/>
                <Label Text="Filler" HorizontalExpand="True"/>
            </GridContainer>
            <GridContainer Rows="1" Columns="4" HorizontalExpand="True">
                <Label Text="Filler" HorizontalExpand="True"/>
                <Label Text="LeftLeg" HorizontalAlignment="Center"/>
                <Label Text="RightLeg" HorizontalAlignment="Center"/>
                <Label Text="Filler" HorizontalExpand="True"/>
            </GridContainer>
        </GridContainer>
    </Control>
</widgets:TargetingControl>